<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <View
        android:layout_width="40dp"
        android:layout_height="4dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="16dp"
        android:background="@android:drawable/divider_horizontal_dark" />

    <ImageView
        android:id="@+id/bottom_sheet_image"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="center_horizontal"
        android:scaleType="centerCrop"
        tools:src="@tools:sample/avatars" />

    <TextView
        android:id="@+id/bottom_sheet_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:textAppearance="?attr/textAppearanceHeadline5"
        tools:text="10 Rubles" />

    <TextView
        android:id="@+id/bottom_sheet_country"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="8dp"
        android:textAppearance="?attr/textAppearanceBody1"
        tools:text="Country: Russia" />

    <TextView
        android:id="@+id/bottom_sheet_name_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="4dp"
        android:textAppearance="?attr/textAppearanceBody1"
        tools:text="Nominal: 10 Rubles" />

    <TextView
        android:id="@+id/bottom_sheet_currency"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="4dp"
        android:textAppearance="?attr/textAppearanceBody1"
        tools:text="Currency: Russian Ruble" />

    <TextView
        android:id="@+id/bottom_sheet_ids"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="4dp"
        android:textAppearance="?attr/textAppearanceCaption"
        tools:text="IDs: RU/RUB" />

</LinearLayout> 